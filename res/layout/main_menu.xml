<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/brown_wood_texture"
  android:fillViewport="true">
  
	 <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin">

     <Button
         android:id="@+id/AllRecipes"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="22dp"
         android:background="@drawable/round_button_med"
         android:text="All Recipes" />

     <Button
         android:id="@+id/MyRecipes"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:layout_centerHorizontal="true"
         android:layout_below="@+id/AllRecipes"
         android:layout_marginTop="28dp"
         android:background="@drawable/round_button_med"
         android:text="My Recipes" />

     <Button
         android:id="@+id/MyPantry"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:layout_centerHorizontal="true"
         android:layout_below="@+id/MyRecipes"
         android:layout_marginTop="32dp"
         android:background="@drawable/round_button_med"
         android:text="My Pantry" />

 </RelativeLayout> 
	
</ScrollView>